<controls:DefaultWindow xmlns="https://spacestation14.io"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:controls="clr-namespace:Robust.Client.UserInterface.CustomControls;assembly=Robust.Client"
                        x:Class="Content.Client._Reserve.CartridgeLoader.Cartridges.CoinTransferDialog"
                        Title="{Loc 'nano-chat-coin-transfer-title'}"
                        MinSize="400 200"
                        SetSize="400 200">
    <BoxContainer Orientation="Vertical" Margin="10">
        <Label Text="{Loc 'nano-chat-coin-transfer-prompt'}" 
               HorizontalAlignment="Center" 
               Margin="0 0 0 10"/>
        
        <LineEdit Name="AmountInput"
                  PlaceHolder="{Loc 'nano-chat-coin-transfer-amount-placeholder'}"
                  Margin="0 10"/>
        
        <BoxContainer Orientation="Horizontal" 
                      HorizontalAlignment="Center"
                      Margin="0 10 0 0">
            <Button Name="SendButton" 
                    Text="{Loc 'nano-chat-coin-transfer-send'}"
                    Margin="0 0 5 0"/>
            <Button Name="CancelButton" 
                    Text="{Loc 'nano-chat-coin-transfer-cancel'}"
                    Margin="5 0 0 0"/>
        </BoxContainer>
    </BoxContainer>
</controls:DefaultWindow>
